<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="miguel.chatgo.SignUpActivity"
    tools:showIn="@layout/activity_sign_up">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/authLayoutContainer"
        android:layout_centerHorizontal="true"
        android:paddingLeft="150dp"
        android:paddingRight="150dp"
        android:id="@+id/relativeLayout4">

        <TextView
            style="@style/titles"
            android:text="@string/signupTitle"
            android:textSize="72sp"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/Subtitle"
            android:text="@string/signupSubtitle"
            android:id="@+id/subtitle"
            android:textSize="48sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/authLayoutContainer"
        style="@style/authLayoutContainer"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/relativeLayout4"
        android:layout_alignEnd="@+id/relativeLayout4"
        android:layout_alignLeft="@+id/relativeLayout4"
        android:layout_alignStart="@+id/relativeLayout4">
        <LinearLayout
            style="@style/AuthFieldContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/authLayout"
            android:layout_marginTop="15dp"

            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <EditText
                style="@style/EditTextAuthFieldContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/usernameField"
                android:hint="@string/username_hint"
                android:textSize="28sp"
                android:textIsSelectable="false" />

            <EditText
                style="@style/EditTextAuthFieldContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passwordField"
                android:hint="@string/password_hint"
                android:textSize="28sp"
                android:textIsSelectable="false" />

            <EditText
                style="@style/EditTextAuthFieldContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/emailField"
                android:hint="@string/email_hint"
                android:textSize="28sp"
                android:textIsSelectable="false" />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDivider"
            android:visibility="invisible"
            android:src="@drawable/button_divider"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/authLayout"
            />
        <Button
            style="@style/ButtonAuth"
            android:text="@string/sign_up_button_label"
            android:id="@+id/actionButton"
            android:onClick="registrarse"
            android:layout_toRightOf="@id/buttonDivider"
            android:layout_toEndOf="@id/buttonDivider"
            android:layout_alignRight="@+id/authLayout"
            android:layout_alignEnd="@+id/authLayout"
            android:textSize="20sp" />

        <Button
            style="@style/ButtonAuth"
            android:text="@string/buttonCancel"
            android:id="@+id/buttonCancel"
            android:onClick="terminar"
            android:layout_toLeftOf="@id/buttonDivider"
            android:layout_toStartOf="@id/buttonDivider"
            android:layout_alignLeft="@+id/authLayout"
            android:layout_alignStart="@+id/authLayout"
            android:textSize="20sp" />


    </RelativeLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>